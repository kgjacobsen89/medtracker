<h1>Log in!</h1>

<% if @type == 'doctor' %>
	<%= form_for @doctor do |f| %>
		<%= f.text_field :email, placeholder: "Email" %><br />
		<%= f.password_field :password, placeholder: "Password" %><br />
		<%= f.submit "Log in" %>
	<% end %>

<% else %>
	<%= form_for @patient do |f| %>
		<%= f.text_field :email, placeholder: "Email" %><br />
		<%= f.password_field :password, placeholder: "Password" %><br />
		<%= f.submit "Log in" %>
	<% end %>

<% end %>