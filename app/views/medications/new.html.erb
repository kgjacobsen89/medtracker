<h1> Create New Medication </h1>

<%= form_for @medication do |f| %>
	Name: <%= f.text_field :name, placeholder: "Name" %><br />
	Dosage: <%= f.text_field :dosage, placeholder: "Dosage (in mg)" %><br />
	Periodicity: <%= f.text_field :periodicity, placeholder: "(i.e. daily, biweekly, monthly)" %><br />
	Duration: <%= f.text_field :duration, placeholder: "(in days)" %><br />
	Prescribed By: <%= f.select_tag :prescribedby, options_for_select(:doctor_ids, @patient.doctor_ids.map{ |d| [d.last_name, d.id]}) :selected => params[:prescribedby] %> <br />
 	Start Date: <%= f.date_field :start_date %><br />
 	End Date: <%= f.date_field :end_date %><br />
	<%= f.submit @button_face %>
<% end %>

<%= link_to "Back to the list", user_medications_path(@user.id) %>