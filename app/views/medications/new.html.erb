<h1> Create New Medication </h1>

<%= form_for @medication do |f| %>
	<%= f.text_field :name, placeholder: "Name" %><br />
	<%= f.text_field :dosage, placeholder: "Dosage (in mg)" %><br />
	<%= f.text_field :periodicity, placeholder: "(i.e. daily, biweekly, monthly)" %><br />
	<%= f.number_field :duration, placeholder: "(in months)" %><br />
	<%= f.submit "Add Medication" %><br>
<% end %>

<%= link_to "Back to the list", patient_medications_path(@patient.id) %>