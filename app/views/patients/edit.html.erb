<h1> Edit Patient Profile </h1>

<%= form_for @patient do |f| %>
	<%= f.text_field :first_name, placeholder: "First Name" %><br />
	<%= f.text_field :last_name, placeholder: "Last Name" %><br />
	<%= f.text_field :sex, placeholder: "Male/Female" %><br />
	Date of Birth: <%= f.date_field :DOB %><br />
	<%= f.text_field :blood_type, placeholder: "Blood Type" %><br />
	
	<%= f.text_field :email, placeholder: "Email" %><br />
	<%= f.text_field :phone_number, placeholder: "Phone Number" %><br />
	<%= f.collection_check_boxes :doctor_ids, Doctor.all, :doctor, :last_name %><br />

	<%= f.submit @button_face %>

<% end %>


<%= link_to "Back to Main Page!", user_patient_path(@user.id) %>
